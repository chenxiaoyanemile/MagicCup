<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_gift_scene3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_my"
    tools:context="com.example.sweetgirl.magiccup1.activity.MyGiftScene3Activity">

    <include layout="@layout/my_gift_scene3_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/edit_view_shape"
            android:hint="@string/click"
            android:textColor="@color/text_b"
            android:textColorHint="@color/text_p"
            android:id="@+id/scene3_et_letter" />

        </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_weight="0.01"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:text="@string/commit"
        android:textSize="18sp"
        android:background="@color/toolbar"
        android:textColor="@color/text_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/scene3_btn_commit" />

</LinearLayout>
